// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Authentication Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("user") // admin, user
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  transactions  Transaction[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Business Models
enum CaisseType {
  MAGASIN
  EVENEMENTS
  DEPOT
}

model Caisse {
  id          String      @id @default(cuid())
  name        String
  type        CaisseType
  balance     Float       @default(0)
  fixedAmount Float?      // For fixed caisses like depot
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  transactions      Transaction[]
  clientPayments    ClientPayment[]
  supplierPayments  SupplierPayment[]
}

enum AchatCategory {
  MAGASIN
  SOCIETE
  EVENEMENT
}

model Achat {
  id          String         @id @default(cuid())
  description String
  amount      Float
  category    AchatCategory
  date        DateTime       @default(now())
  reference   String?
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  transactions Transaction[]
}

model ChargeCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String?  // Hex color for UI
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Charge {
  id          String   @id @default(cuid())
  description String
  amount      Float
  category    String   // Changed from enum to string for flexibility
  date        DateTime @default(now())
  reference   String?
  notes       String?
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  transactions Transaction[]
}

enum TransactionType {
  REVENUE
  ACHAT
  CHARGE
  TRANSFER
  VENTE
}

model Vente {
  id          String   @id @default(cuid())
  description String
  amount      Float
  quantity    Float    @default(1)
  unitPrice   Float
  category    String?  // Optional category
  date        DateTime @default(now())
  reference   String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clientOrderId String?      @unique
  clientOrder   ClientOrder? @relation(fields: [clientOrderId], references: [id])
  
  transactions Transaction[]
}

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  amount      Float
  description String
  date        DateTime        @default(now())
  reference   String?
  
  caisseId    String?
  caisse      Caisse?         @relation(fields: [caisseId], references: [id])
  
  achatId     String?
  achat       Achat?          @relation(fields: [achatId], references: [id])
  
  chargeId    String?
  charge      Charge?         @relation(fields: [chargeId], references: [id])
  
  venteId     String?
  vente       Vente?          @relation(fields: [venteId], references: [id])
  
  clientPaymentId String?
  clientPayment   ClientPayment? @relation(fields: [clientPaymentId], references: [id])
  
  supplierPaymentId String?
  supplierPayment   SupplierPayment? @relation(fields: [supplierPaymentId], references: [id])
  
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// Client Management Models
model Client {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  address     String?
  notes       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      ClientOrder[]
}

enum OrderStatus {
  DRAFT
  CONFIRMED
  PARTIALLY_PAID
  FULLY_PAID
  CANCELLED
}

model ClientOrder {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  clientId    String
  client      Client      @relation(fields: [clientId], references: [id])
  
  totalAmount Float
  paidAmount  Float       @default(0)
  remainingAmount Float   @default(0)
  
  status      OrderStatus @default(DRAFT)
  orderDate   DateTime    @default(now())
  dueDate     DateTime?
  
  description String?
  notes       String?
  
  items       OrderItem[]
  payments    ClientPayment[]
  vente       Vente?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model OrderItem {
  id          String      @id @default(cuid())
  orderId     String
  order       ClientOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  description String
  quantity    Float       @default(1)
  unitPrice   Float
  totalPrice  Float
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CHECK
  CREDIT_CARD
  OTHER
}

model ClientPayment {
  id          String        @id @default(cuid())
  orderId     String
  order       ClientOrder   @relation(fields: [orderId], references: [id])
  
  amount      Float
  paymentMethod PaymentMethod @default(CASH)
  paymentDate DateTime      @default(now())
  
  caisseId    String?
  caisse      Caisse?       @relation(fields: [caisseId], references: [id])
  
  reference   String?
  notes       String?
  
  transactions Transaction[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// Supplier (Fournisseur) Management Models
model Supplier {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  address     String?
  notes       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      SupplierOrder[]
}

enum SupplierOrderStatus {
  DRAFT
  CONFIRMED
  PARTIALLY_PAID
  FULLY_PAID
  CANCELLED
}

model SupplierOrder {
  id          String              @id @default(cuid())
  orderNumber String              @unique
  supplierId  String
  supplier    Supplier            @relation(fields: [supplierId], references: [id])
  
  totalAmount Float
  paidAmount  Float               @default(0)
  remainingAmount Float           @default(0)
  
  status      SupplierOrderStatus @default(DRAFT)
  orderDate   DateTime            @default(now())
  dueDate     DateTime?
  
  description String?
  notes       String?
  
  items       SupplierOrderItem[]
  payments    SupplierPayment[]
  
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model SupplierOrderItem {
  id          String        @id @default(cuid())
  orderId     String
  order       SupplierOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  description String
  quantity    Float         @default(1)
  unitPrice   Float
  totalPrice  Float
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model SupplierPayment {
  id          String        @id @default(cuid())
  orderId     String
  order       SupplierOrder @relation(fields: [orderId], references: [id])
  
  amount      Float
  paymentMethod PaymentMethod @default(CASH)
  paymentDate DateTime      @default(now())
  
  caisseId    String?
  caisse      Caisse?       @relation(fields: [caisseId], references: [id])
  
  reference   String?
  notes       String?
  
  transactions Transaction[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
